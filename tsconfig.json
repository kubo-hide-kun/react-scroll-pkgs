{
  "include": ["packages/**/*", "apps/website/**/*"],
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
