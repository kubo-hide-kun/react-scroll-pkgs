{
  "name": "use-window-scroll-in-element",
  "version": "0.0.1",
  "main": "index.js",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "website": "npm run dev -w website",
    "websiteBuild": "npm run build -w use-window-scroll-in-element && npm run build -w react-scroll-flip-book && npm run build -w website",
    "fix:all": "run-s lint:fix format:fix check-types",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx './packages' --ignore-path .gitignore",
    "lint:fix": "npm run lint --fix",
    "format": "run-s format:packages format:website",
    "format:packages": "prettier --check \"./packages/**/*.{js,jsx,ts,tsx}\"",
    "format:website": "prettier --check \"./apps/website/**/*.{js,jsx,ts,tsx}\"",
    "format:fix": "run-s format:fix:packages format:fix:website",
    "format:fix:packages": "prettier --write \"./packages/**/*.{js,jsx,ts,tsx}\"",
    "format:fix:website": "prettier --write \"./apps/website/**/*.{js,jsx,ts,tsx}\"",
    "lint-staged": "lint-staged",
    "check-types": "tsc --noEmit",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\""
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx}": [
      "eslint --ext .js,.jsx,.ts,.tsx './packages' --ignore-path .gitignore",
      "prettier --check \"./packages/**/*.{js,jsx,ts,tsx}\"",
      "prettier --check \"./apps/website/**/*.{js,jsx,ts,tsx}\""
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^28.1.3",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4"
  }
}
